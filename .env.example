# =============================================================================
# STOCKSPOT REDDIT DEAL BOT CONFIGURATION
# =============================================================================
# Reddit-only autonomous deal bot for Amazon affiliate marketing
# Copy this file to .env and configure the required variables below.
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# DATABASE
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/stockspot

# =============================================================================
# REDDIT API (REQUIRED)
# =============================================================================
# Create Reddit app at: https://www.reddit.com/prefs/apps/
# Select "script" app type for autonomous posting
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USERNAME=your_reddit_username_here
REDDIT_PASSWORD=your_reddit_password_here
REDDIT_USER_AGENT=StockSpot/1.0.0 (Deal Bot)

# =============================================================================
# REDDIT CONTROL FLAGS
# =============================================================================
# DRY_RUN: When true, simulates posting without actually posting to Reddit
DRY_RUN=true
# REDDIT_ENABLED: When false, completely disables Reddit functionality
REDDIT_ENABLED=true

# =============================================================================
# OBSERVER MODE (SAFE WARM-UP)
# =============================================================================
# Set to true to browse subreddits without posting for warmup period
OBSERVER_MODE=true
OBSERVER_DAYS=7

# =============================================================================
# AMAZON AFFILIATE (REQUIRED FOR REVENUE)
# =============================================================================
AMAZON_ASSOCIATE_ID=your_amazon_associate_id_here

# =============================================================================
# WORKER CONFIGURATION (OPTIONAL)
# =============================================================================
WORKER_INTERVAL_MINUTES=5
MAX_RETRIES=3
RETRY_DELAY=1000
LOG_LEVEL=info

# =============================================================================
# LEGACY COMPATIBILITY (OPTIONAL)
# =============================================================================
# These are kept for backwards compatibility with existing code
JWT_SECRET=development-secret-change-in-production
# =============================================================================
# Facebook Graph API
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# Instagram Basic Display API
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_USER_ID=your-instagram-user-id

# Pinterest API
PINTEREST_ACCESS_TOKEN=your-pinterest-access-token
PINTEREST_BOARD_ID=your-pinterest-board-id

# TikTok for Business API
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TIKTOK_ADVERTISER_ID=your-tiktok-advertiser-id

# Buffer API
BUFFER_ACCESS_TOKEN=your-buffer-access-token
BUFFER_PROFILE_IDS=profile1,profile2,profile3

# =============================================================================
# AFFILIATE NETWORKS
# =============================================================================
# Walmart Affiliate API
WALMART_API_KEY=your-walmart-api-key
WALMART_PUBLISHER_ID=your-walmart-publisher-id
WALMART_PARTNER_ID=your-walmart-partner-id

# Target Affiliate API
TARGET_API_KEY=your-target-api-key
TARGET_APPLICATION_ID=your-target-application-id
TARGET_PARTNER_TOKEN=your-target-partner-token

# Best Buy Affiliate API
BESTBUY_API_KEY=your-bestbuy-api-key
BESTBUY_PARTNER_ID=your-bestbuy-partner-id

# =============================================================================
# URL SHORTENING SERVICES
# =============================================================================
URLGENIUS_API_KEY=your-urlgenius-api-key
BITLY_ACCESS_TOKEN=your-bitly-access-token
TINYURL_API_KEY=your-tinyurl-api-key
REBRANDLY_API_KEY=your-rebrandly-api-key

# =============================================================================
# DASHBOARD ACCESS
# =============================================================================
# Password for accessing the StockSpot dashboard
OWNER_DASHBOARD_PASSWORD=your-secure-password

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Set to 'true' for development/testing without real API calls
TEST_MODE=false
DRY_RUN=false

# Flask environment (for Python dashboard)
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_SECRET_KEY=your-flask-secret-key-change-in-production

# Feature toggles
ENABLE_TWITTER=true
ENABLE_AMAZON=true
AUTO_POST=false

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FILE STORAGE
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# DEVELOPMENT & DEBUG
# =============================================================================
DEBUG=false
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SOCIAL MEDIA APIs
# =============================================================================

# Buffer API
BUFFER_ACCESS_TOKEN=your-buffer-access-token
BUFFER_PROFILE_IDS=profile1,profile2,profile3

# Twitter API v2
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Facebook Graph API
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# Instagram Basic Display API
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_USER_ID=your-instagram-user-id

# Pinterest API
PINTEREST_ACCESS_TOKEN=your-pinterest-access-token
PINTEREST_BOARD_ID=your-pinterest-board-id

# TikTok for Business API
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TIKTOK_ADVERTISER_ID=your-tiktok-advertiser-id

# =============================================================================
# URL SHORTENING SERVICES
# =============================================================================

# Bitly API
BITLY_ACCESS_TOKEN=your-bitly-access-token

# TinyURL API
TINYURL_API_KEY=your-tinyurl-api-key

# Rebrandly API
REBRANDLY_API_KEY=your-rebrandly-api-key

# URLGenius API
URLGENIUS_API_KEY=your-urlgenius-api-key

# =============================================================================
# AI/CONTENT GENERATION (Optional)
# =============================================================================

# OpenAI API (for enhanced content generation)
OPENAI_API_KEY=your-openai-api-key

# Claude API (alternative AI service)
CLAUDE_API_KEY=your-claude-api-key

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================

# SMTP Settings for error notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=your-notification-email@gmail.com

# =============================================================================
# DATABASE (Future Enhancement)
# =============================================================================

# PostgreSQL (for production scaling)
DATABASE_URL=postgresql://username:password@localhost:5432/stockspot

# Redis (for caching and queue management)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Rate limiting
MAX_REQUESTS_PER_HOUR=100
MAX_POSTS_PER_DAY=50

# Content filtering
MIN_DEAL_DISCOUNT=20
MAX_PRICE_RANGE=1000
BANNED_KEYWORDS=inappropriate,spam,prohibited

# Posting schedule
POSTING_HOURS_START=8
POSTING_HOURS_END=22
POSTING_TIMEZONE=America/New_York

# Data retention
KEEP_HISTORY_DAYS=30
AUTO_CLEANUP_ENABLED=True

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================

# Enable test mode (uses mock data instead of real APIs)
TEST_MODE=False

# Enable detailed logging
VERBOSE_LOGGING=True

# Mock data for testing
MOCK_DEAL_COUNT=10
MOCK_SUCCESS_RATE=0.85

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# When deploying to production, set these:
# FLASK_ENV=production
# FLASK_DEBUG=False
# Generate a strong SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# Use environment-specific URLs and stronger passwords