# =============================================================================
# STOCKSPOT - MULTI-RETAILER DEAL & RESTOCK MONITOR
# =============================================================================
# PWA + Email/RSS + Amazon Affiliate + Multi-Retailer Feeds
# Copy this file to .env and configure the required variables below.
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE (Optional - dry-run uses in-memory storage)
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/stockspot
DATABASE_TYPE=local

# =============================================================================
# DRY-RUN MODE (No credentials required for testing)
# =============================================================================
DRY_RUN=true
DRY_RUN_MOCK_DATA=true

# =============================================================================
# AMAZON AFFILIATE (Required for production, optional for dry-run)
# =============================================================================
AMAZON_ASSOCIATE_ID=your-associate-id
AMAZON_API_KEY=your-amazon-api-key
AMAZON_PARTNER_TAG=your-partner-tag

# =============================================================================
# RETAILER MONITORING (Configure actual scraper credentials in production)
# =============================================================================
WALMART_MONITORING_ENABLED=true
TARGET_MONITORING_ENABLED=true
BESTBUY_MONITORING_ENABLED=true
GAMESTOP_MONITORING_ENABLED=true

# =============================================================================
# EMAIL NOTIFICATIONS (Stubbed for now, implement later)
# =============================================================================
EMAIL_ENABLED=false
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-key
EMAIL_FROM=alerts@stockspot.com

# =============================================================================
# RSS FEED CONFIGURATION
# =============================================================================
RSS_ENABLED=true
FEED_MAX_ITEMS=100
FEED_RETENTION_DAYS=7

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRY=7d
BCRYPT_ROUNDS=10

# =============================================================================
# TIER PRICING & FEATURES
# =============================================================================
FREE_TIER_DELAY_MINUTES=10
TIER_FREE_PRICE=0
TIER_PAID_PRICE=9.99
TIER_YEARLY_PRICE=99.00
AFFILIATE_LINK_AUTO_CONVERT=true

# =============================================================================
# MONITORING & SCHEDULING
# =============================================================================
MONITOR_INTERVAL_MINUTES=5
MAX_RETRIES=3
RETRY_DELAY=1000
RESTOCK_CHECK_INTERVAL_MINUTES=2

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
LOG_LEVEL=info
DEBUG=false
