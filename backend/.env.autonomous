# StockSpot Autonomous Deal Bot - Simplified Configuration

# Database
MONGODB_URI=mongodb://localhost:27017/stockspot

# Telegram Bot Configuration (Required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Amazon Affiliate Configuration (Required for monetization)
AMAZON_ASSOCIATE_ID=your_amazon_associate_id_here

# Server Configuration
PORT=3000
NODE_ENV=production

# Optional: Rate Limiting Settings
REQUEST_DELAY_MIN=1000
REQUEST_DELAY_MAX=3000
BATCH_SIZE=5

# Optional: Error Handling
MAX_ERROR_COUNT=10
RETRY_BACKOFF_BASE=60

# Optional: Monitoring Schedule
CHECK_INTERVAL_MINUTES=5
DAILY_SUMMARY_HOUR=9