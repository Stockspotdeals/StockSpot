# StockSpot Environment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# AMAZON ASSOCIATES API
# =============================================================================
# Get these from: https://affiliate-program.amazon.com/home/account/tag/manage
AMAZON_ASSOCIATE_ID=your-associate-tag-20
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key

# =============================================================================
# TWITTER/X API 
# =============================================================================
# Get these from: https://developer.twitter.com/en/apps
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-bearer-token
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret

# =============================================================================
# DASHBOARD ACCESS
# =============================================================================
# Password for accessing the StockSpot dashboard
OWNER_DASHBOARD_PASSWORD=your-secure-password

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Set to 'true' for development/testing without real API calls
TEST_MODE=false

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=false
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag
AMAZON_MARKETPLACE=US

# Walmart Affiliate API
WALMART_API_KEY=your-walmart-api-key
WALMART_PUBLISHER_ID=your-walmart-publisher-id

# Target Affiliate API
TARGET_API_KEY=your-target-api-key
TARGET_APPLICATION_ID=your-target-application-id

# Best Buy Affiliate API
BESTBUY_API_KEY=your-bestbuy-api-key

# =============================================================================
# SOCIAL MEDIA APIs
# =============================================================================

# Buffer API
BUFFER_ACCESS_TOKEN=your-buffer-access-token
BUFFER_PROFILE_IDS=profile1,profile2,profile3

# Twitter API v2
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Facebook Graph API
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# Instagram Basic Display API
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_USER_ID=your-instagram-user-id

# Pinterest API
PINTEREST_ACCESS_TOKEN=your-pinterest-access-token
PINTEREST_BOARD_ID=your-pinterest-board-id

# TikTok for Business API
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TIKTOK_ADVERTISER_ID=your-tiktok-advertiser-id

# =============================================================================
# URL SHORTENING SERVICES
# =============================================================================

# Bitly API
BITLY_ACCESS_TOKEN=your-bitly-access-token

# TinyURL API
TINYURL_API_KEY=your-tinyurl-api-key

# Rebrandly API
REBRANDLY_API_KEY=your-rebrandly-api-key

# URLGenius API
URLGENIUS_API_KEY=your-urlgenius-api-key

# =============================================================================
# AI/CONTENT GENERATION (Optional)
# =============================================================================

# OpenAI API (for enhanced content generation)
OPENAI_API_KEY=your-openai-api-key

# Claude API (alternative AI service)
CLAUDE_API_KEY=your-claude-api-key

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================

# SMTP Settings for error notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=your-notification-email@gmail.com

# =============================================================================
# DATABASE (Future Enhancement)
# =============================================================================

# PostgreSQL (for production scaling)
DATABASE_URL=postgresql://username:password@localhost:5432/stockspot

# Redis (for caching and queue management)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Rate limiting
MAX_REQUESTS_PER_HOUR=100
MAX_POSTS_PER_DAY=50

# Content filtering
MIN_DEAL_DISCOUNT=20
MAX_PRICE_RANGE=1000
BANNED_KEYWORDS=inappropriate,spam,prohibited

# Posting schedule
POSTING_HOURS_START=8
POSTING_HOURS_END=22
POSTING_TIMEZONE=America/New_York

# Data retention
KEEP_HISTORY_DAYS=30
AUTO_CLEANUP_ENABLED=True

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================

# Enable test mode (uses mock data instead of real APIs)
TEST_MODE=False

# Enable detailed logging
VERBOSE_LOGGING=True

# Mock data for testing
MOCK_DEAL_COUNT=10
MOCK_SUCCESS_RATE=0.85

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# When deploying to production, set these:
# FLASK_ENV=production
# FLASK_DEBUG=False
# Generate a strong SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# Use environment-specific URLs and stronger passwords