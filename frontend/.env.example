REACT_APP_AMAZON_ASSOCIATE_TAG=your-associate-tag-20
REACT_APP_AFFILIATE_ATTRIBUTION=StockSpot

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
REACT_APP_GTM_ID=GTM-XXXXXXX
REACT_APP_HOTJAR_ID=your-hotjar-id
REACT_APP_MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# BRANDING & CONFIGURATION
# =============================================================================
REACT_APP_APP_NAME=StockSpot
REACT_APP_APP_VERSION=1.0.0
REACT_APP_COMPANY_NAME=StockSpot Team
REACT_APP_SUPPORT_EMAIL=support@stockspot.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Public API keys only (no secrets)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Build and runtime configuration
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true